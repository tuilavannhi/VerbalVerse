<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/signup"
    tools:context=".SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bogoc"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="154dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng Ký"
            android:textStyle="bold"
            android:textSize="28dp"
            android:textAlignment="center"
            android:textColor="#4E5E73"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/email"
            android:drawablePadding="8dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/username_signup"
            android:drawablePadding="8dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/password_sigup"
            android:drawablePadding="8dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/repassword_signup"
            android:drawablePadding="8dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/xanhdam"
            android:text="SIGN UP"
            android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>